<h1>Menu</h1>


	  <%= link_to "All", menu_path, class: 'btn btn-secondary'%>
<% Section.all.each do |section| %>
	<div class="btn-group" role="group" aria-label="Basic example">
	  <%= link_to section, menu_path(section: section), class: 'btn btn-secondary'%>
	</div>
<% end %>

<% @food_items.each do |food_item| %>

<div class="card-deck-wrapper">
  <div class="card-deck">
<div class="card">
  <img class="card-img-top"><%= image_tag food_item.image_url %></img>
  <div class="card-block">
    <h4 class="card-title"><%= food_item.name %></h4>
    <p class="card-text">
    	<%= food_item.description %><br>
		<%= food_item.price %><br>	
	</p>
    <%= link_to "Order", new_order_path(food_item_id: food_item.id), class: 'btn btn-secondary' %>
  </div>
</div>
 </div>
</div>

		
<% end %>
